#pullout
  .options
    .trigger
    .pdf= link_to 'pdf', pdf_path
    .edit= link_to 'edit', edit_path
    :javascript
      optionsHidden = true;
      locked        = false;
      $('#pullout').click(function() {
        if (optionsHidden) {
          $('#pullout').animate({right:'+=100'}, 100, 'easeOutQuad');
          optionsHidden = !optionsHidden
        } else {
          // Umschreiben auf 2 Sekunden nach dem letzten Klick…
          //
          if (locked) { return; };
          locked = true;
          setTimeout(function() {
            $('#pullout').animate({right:'-=100'}, 100, 'easeOutQuad'); optionsHidden = !optionsHidden; locked = false;
          }, 2000);
        }
      });

